  "license": "ISC",
  "hugo-bin": {
    "buildTags": "extended"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "hugo-bin": "^0.145.2",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "prettier-plugin-go-template": "^0.0.15",
    "prettier-plugin-tailwindcss": "^0.6.14"
